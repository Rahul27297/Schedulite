<h2>Fall 2021 Courses</h2>
<h1 ><%= image_tag("columbia-university-logo.jpg", :alt => "logo", :class => "logo_image") %></h1>
<table class="table table-striped col-md-12" id="movies">
  <thead>
    <tr>
      <th>Course Number</th>
      <th>Department</th>
      <th>Course Name</th>
      <th>Professor</th>
      <th>Requirement</th>
      <th>Course Day/Time</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td>
          <%= movie.course_num %>
        </td>
        <td>
          <%= movie.dept %>
        </td>
        <td>
          <%= movie.course_name %>
        </td>
        <td>
          <%= movie.professor %>
        </td>
	<td>
	  <%= movie.requirement%>
	</td>
        <td>
	  <%= movie.course_time%>
	</td>
    <td>
      <%= link_to "More about #{movie.course_name}", movie_path(movie) %>
    </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add new movie', new_movie_path, :class => 'btn btn-primary' %>
