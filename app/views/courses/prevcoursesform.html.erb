<%= form_tag courses_path, method: :get, id: 'departments_form' do %>
 <% end %>

 <div class="row">
         <div class="col-12">
         <label class="label_name"> Already Taken: </label>
 	<% @courses.each do |course| %>
         <div class="form-check  form-check-inline">
           <%= label_tag "show_course[#{course.course_num}]", course.course_num, class: 'form-check-label' %>
           <%= check_box_tag "show_course[#{course.course_num}]", "0",  @courses.include?(course), class: 'form-check-input', id: "showcourses_#{course.course_num}"%>
         </div>	
        <% end %>
 <div class="row">
         <div class="col-12">
 	<form method = "get" action = "/updatedcourses">
             <%= submit_tag 'Update Course List', id: 'departments_submit', class: 'btn btn-primary' %>
 	</form>
         </div>
     </div>	
         </div>
 </div>
