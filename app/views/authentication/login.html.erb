<% if flash[:error] %>
   <div class="alert alert-danger">
     <span class="error"><%= flash[:error] %></span>
   </div>
<% end %>
<h1>Login</h1>
<%= form_tag login_path, method: :get do %>
   <%= label_tag :username%>
   <%= text_field_tag :username %>
   <%= label_tag :password%>
   <%= password_field_tag :password%>
   <%= submit_tag "Login"%>
<%end%>