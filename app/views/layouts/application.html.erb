<%# Our "base" layout should be a valid HTML document. %>
<!DOCTYPE html>
<html>
  <head>
    <title class='palle'>Schedulite: The New Way of Personalized Scheduling</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <%= stylesheet_link_tag 'application', 'media' => 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%# These classes come from the Bootstrap CSS framework. %>
    <nav class="navbar navbar-dark text-white sticky-top" style="background-color: #9BDDFF;">
      <h2 style="margin-left: 20px"><%= link_to "Schedulite: The New Way of Personalized Scheduling", courses_path, style: "color: white" %></h2>
      <%= link_to "Logout", logout_path, method: :post, class: 'btn btn-outline-success', style: 'border: 1px solid white; border-color: white; color: white; margin-right: 20px' %>
    </nav>
      <%# Render "flash" messages in our application. This loads _flash.erb %>
      <%= render 'layouts/flash' %>
        <%= yield %>
  </body>
</html>
